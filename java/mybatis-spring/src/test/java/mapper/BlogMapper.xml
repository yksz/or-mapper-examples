<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.BlogMapper">

    <update id="createTable">
        CREATE TABLE IF NOT EXISTS blog (
            id int NOT NULL GENERATED BY DEFAULT AS IDENTITY,
            title varchar(255) NOT NULL,
            author varchar(255),
            PRIMARY KEY (id)
        )
    </update>

    <insert id="save" parameterType="entity.Blog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO blog (title, author)
        VALUES (#{title}, #{author})
    </insert>

    <select id="findByTitle" resultType="entity.Blog">
        SELECT * FROM blog WHERE title = #{title}
    </select>

    <select id="findByAuthor" resultType="entity.Blog">
        SELECT * FROM blog WHERE author = #{author}
    </select>

</mapper>