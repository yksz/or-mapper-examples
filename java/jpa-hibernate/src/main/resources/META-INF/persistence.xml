<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">

    <persistence-unit name="test">
        <class>entity.bidirectional.EagerParent</class>
        <class>entity.bidirectional.EagerChild</class>
        <class>entity.bidirectional.LazyParent</class>
        <class>entity.bidirectional.LazyChild</class>
        <class>entity.unidirectional.EagerParent</class>
        <class>entity.unidirectional.EagerChild</class>
        <class>entity.unidirectional.LazyParent</class>
        <class>entity.unidirectional.LazyChild</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:./db/testDb" />
            <property name="javax.persistence.jdbc.user" value="sa" />
            <property name="javax.persistence.jdbc.password" value="" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="false" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
    </persistence-unit>

</persistence>