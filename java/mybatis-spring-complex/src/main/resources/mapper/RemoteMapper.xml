<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.RemoteMapper">

    <update id="createTable">
        CREATE TABLE IF NOT EXISTS remote (
            id int NOT NULL GENERATED BY DEFAULT AS IDENTITY,
            name varchar(255) NOT NULL,
            PRIMARY KEY (id)
        )
    </update>

    <insert id="save" parameterType="entity.Remote" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO remote (name)
        VALUES (#{name})
    </insert>

    <select id="findByName" resultType="entity.Remote">
        SELECT * FROM remote WHERE name = #{name}
    </select>

</mapper>