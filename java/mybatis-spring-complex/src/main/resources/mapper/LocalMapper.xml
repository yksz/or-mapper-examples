<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.LocalMapper">

    <update id="createTable">
        CREATE TABLE IF NOT EXISTS local (
            id int NOT NULL GENERATED BY DEFAULT AS IDENTITY,
            name varchar(255) NOT NULL,
            PRIMARY KEY (id)
        )
    </update>

    <update id="dropTable">
        DROP TABLE local IF EXISTS
    </update>

    <insert id="save" parameterType="entity.Local" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO local (name)
        VALUES (#{name})
    </insert>

    <select id="findByName" resultType="entity.Local">
        SELECT * FROM local WHERE name = #{name}
    </select>

</mapper>